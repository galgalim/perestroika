{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Run",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"--release",
				"--package=yantra"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Check Workspace",
			"type": "shell",
			"command": "cargo",
			"args": [
				"check",
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Build Workspace",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build",
				"--release",
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Test Workspace",
			"type": "shell",
			"command": "cargo",
			"args": [
				"test",
				"--release",
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Bench Workspace",
			"type": "shell",
			"command": "cargo",
			"args": [
				"bench",
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Doc Workspace",
			"type": "shell",
			"command": "cargo",
			"args": [
				"doc",
			],
			"problemMatcher": [
				"$rustc"
			]
		},
		{
			"label": "Open Docs",
			"type": "shell",
			"command": "cargo",
			"args": [
				"doc",
				"--open"
			],
			"problemMatcher": [
				"$rustc"
			]
		},
	]
}